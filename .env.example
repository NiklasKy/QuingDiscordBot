# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Staff Role IDs (for schedule approval and debug commands)
ADMIN_ROLE_ID=admin_role_id_here
MOD_ROLE_ID=mod_role_id_here

# Schedule Detection Configuration (ENABLED by default)
SCHEDULE_CHANNEL_ID=schedule_channel_id_here
ANNOUNCEMENT_CHANNEL_ID=announcement_channel_id_here
SCHEDULE_EMOJI_ID=emoteIDhere
SCHEDULE_EMOJI_NAME=emoteNamehere
SCHEDULE_EMOJI_ANIMATED=true

# OpenAI Configuration (required for GPT-4 Vision schedule detection)
OPENAI_API_KEY=your_openai_api_key_here

# Minecraft Features (DISABLED by default - comment out to enable)
# WHITELIST_CHANNEL_ID=whitelist_channel_id_here
# MOD_CHANNEL_ID=mod_channel_id_here
# WHITELIST_ROLE_ID=your_whitelist_role_id_here
# RCON_HOST=host.docker.internal
# RCON_PORT=25575
# RCON_PASSWORD=your_rcon_password_here

# Database Configuration (only needed if Minecraft features are enabled)
# DB_HOST=quingcorporation-postgres
# DB_PORT=5432
# DB_NAME=quingcorporation
# DB_USER=quingcorporation
# QUINGCORPORATION_DB_PASSWORD=your_quingcorporation_password

# Role Mappings for Minecraft
# Format: ROLE_MAPPING_NAME=discord_role_id:minecraft_role_name
# Multiple Discord role IDs can be comma-separated
# The command format "lpv user [Minecraft Username] Parent Set [RoleName]" will be used
ROLE_MAPPING_MOD=your_mod_role_id,your_mod_role_id:mod
ROLE_MAPPING_SUB=your_sub_role_id:sub

# Other Database Passwords (for backup purposes)
# LuckPerms Database (Port 5433)
LUCKPERMS_DB_PASSWORD=your_luckperms_password
# HuskSync Database (Port 5434)
HUSKSYNC_DB_PASSWORD=your_husksync_password

# MySQL Database
MINECRAFT_MYSQL_ROOT_PASSWORD=mysql_root_password
MINECRAFT_MYSQL_PASSWORD=mysql_password

# Role Hierarchy - Higher number means higher rank
# The bot will assign only the highest ranked role the user has access to
# Format: ROLE_HIERARCHY=role1:rank1,role2:rank2,role3:rank3
# Example: sub:1,vip:2,mod:3,admin:4
ROLE_HIERARCHY=sub:1,mod:2 